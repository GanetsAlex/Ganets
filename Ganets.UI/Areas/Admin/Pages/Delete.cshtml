@page
@model Ganets.UI.Areas.Admin.Pages.DeleteModel

@{
    ViewData["Title"] = "Удаление товара";
}

<div class="container mt-4 mb-5">
    <div class="card shadow-sm mx-auto" style="max-width: 600px;">
        <div class="card-body">
            <h4 class="card-title mb-3">Вы уверены, что хотите удалить товар?</h4>

            <dl class="row">
                <dt class="col-sm-4">Название</dt>
                <dd class="col-sm-8">@Model.gadget.Name</dd>

                <dt class="col-sm-4">Описание</dt>
                <dd class="col-sm-8">@Model.gadget.Description</dd>

                <dt class="col-sm-4">Цена</dt>
                <dd class="col-sm-8">@Model.gadget.Price.ToString("F2") BYR</dd>

                <dt class="col-sm-4">Категория</dt>
                <dd class="col-sm-8">@Model.gadget.Category?.Name</dd>

                @if (!string.IsNullOrEmpty(Model.gadget.Image))
                {
                        <dt class="col-sm-4">Изображение</dt>
                        <dd class="col-sm-8">
                            <img src="@Model.gadget.Image" alt="Товар" class="img-thumbnail" style="max-height: 200px;" />
                        </dd>
                }
            </dl>

            <form method="post" class="mt-4 d-flex justify-content-between">
                <input type="hidden" asp-for="gadget.Id" />
                <button type="submit" class="btn btn-danger">Удалить</button>
                <a asp-page="./Index" class="btn btn-secondary">Отмена</a>
            </form>
        </div>
    </div>
</div>
