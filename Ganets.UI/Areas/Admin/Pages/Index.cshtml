@page
@model Ganets.UI.Areas.Admin.Pages.IndexModel

@{
    ViewData["Title"] = "Админка";
}

<h1>Админка</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">
        <i class="fa-solid fa-plus"></i> Добавить
    </a>
</p>
<table class="table">
    <thead>
       <tr> 
           <th> @Html.DisplayNameFor(model => model.Gadget[0].Description)</th> 
           <th> @Html.DisplayNameFor(model => model.Gadget[0].Price)</th> 
           <th> @Html.DisplayNameFor(model => model.Gadget[0].Image)</th>
           <th> @Html.DisplayNameFor(model => model.Gadget[0].Name)</th>
       <th></th>
       </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Gadget) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
               <img src="@item.Image" width="200" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td> 
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn success">
                        <i class="fa-solid fa-pen-to-square"></i> Изменить
                    </a>
                    <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn info ms-1 me-1">
                        <i class="fa-solid fa-info"></i> Подробно
                    </a>
                    <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn danger">
                        <i class="fa-regular fa-trash-can"></i> Удалить
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
<pager admin="true"
       current-page="@Model.CurrentPage"
       total-pages="@Model.TotalPages">
</pager>
