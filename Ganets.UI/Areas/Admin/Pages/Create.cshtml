@page
@model Ganets.UI.Areas.Admin.Pages.CreateModel

@{
    ViewData["Title"] = "Добавить товар";
}

<h1>Добавить товар</h1>

<h4>Добавить товар</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Gadget.Description" class="control-label">Описание</label>
                <input asp-for="Gadget.Description" class="form-control" />
                <span asp-validation-for="Gadget.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gadget.Price" class="control-label">Цена</label>
                <input asp-for="Gadget.Price" class="form-control" />
                <span asp-validation-for="Gadget.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gadget.CategoryId" class="control-label">Категория</label>
                <select asp-for="Gadget.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Gadget.Name" class="control-label">Название</label>
                <input asp-for="Gadget.Name" class="form-control" />
                <span asp-validation-for="Gadget.Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Image" class="form-label">Изображение</label>
                <input type="file" asp-for="Image" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Назад</a>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

