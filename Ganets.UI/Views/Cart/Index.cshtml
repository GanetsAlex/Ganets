@using Ganets.Domain
@model Dictionary<int,CartItem> 

<!-- список объектов -->
@if (Model.Count() == 0)
{
        <h2>Корзина пуста</h2>
}
else
{
        <h2>Ваша корзина:</h2>
        <table class="table table-striped">
        @foreach (var item in Model)
        {
                    <tr>
                        <td><img src="@item.Value.Item.Image" width="100" /></td>
                        <td>@item.Value.Item.Name</td>
                        <td>@item.Value.Item.Description</td>
                        <td>@item.Value.Qty</td>
                        <td>
                            <a class="btn btn-danger" asp-action="Remove" asp-controller="Cart" asp-route-id="@item.Value.Item.Id">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
        }
        </table>
}
